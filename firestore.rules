rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // User Collection: Only the user can read/write their own data
    // Allowing reading for all authenticated users to support existence checks
    // User Collection
    match /users/{userId} {
      allow read: if true; // Publicly readable for profile checks
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // Subcollections (like 'events')
      match /{allSubcollections=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Allow collection-level queries (list) for searching
    match /users {
      allow list: if true;
    }
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
    
  }
}
